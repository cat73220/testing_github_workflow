{
  "plugins": {
    "textlint-plugin-html": {
      "extensions": [".ejs"]
    }
  }
  , "rules": {
      "preset-ja-technical-writing": {
        "no-exclamation-question-mark": false,
        "ja-no-mixed-period": false
      }
      , "preset-jtf-style": {
        "1.1.1.本文": false,
        "2.1.2.漢字": true,
        "2.1.5.カタカナ": true,
        "2.1.6.カタカナの長音": true,
        "2.2.1.ひらがなと漢字の使い分け": true
      }
  }
}
